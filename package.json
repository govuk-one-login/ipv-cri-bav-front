{
  "name": "ipv-cri-bav-front",
  "version": "0.0.1",
  "description": "Frontend for the identify proving and bank account verification CRI",
  "main": "index.js",
  "engines": {
    "node": "18.*",
    "yarn": "1.22.*"
  },
  "scripts": {
    "start": "node src/app.js",
    "start:ci": "REDIS_SESSION_URL= NODE_ENV=development node src/app.js",
    "start:debug": "DEBUG=* node src/app.js",
    "build": "yarn build-sass && yarn build-js && yarn copy-assets",
    "dev": "nodemon src/app.js",
    "build-sass": "rm -rf dist/public/style.css && sass --no-source-map src/assets/scss/application.scss dist/public/stylesheets/application.css --style compressed",
    "build-js": "yarn build-js:analytics && yarn build-js:all",
    "build-js:analytics": "mkdir -p dist/public/javascripts; uglifyjs src/assets/javascripts/init.js node_modules/@govuk-one-login/one-login-analytics/lib/analytics.js -o dist/public/javascripts/analytics.js",
    "build-js:all": "mkdir -p dist/public/javascripts; uglifyjs node_modules/govuk-frontend/govuk/all.js node_modules/hmpo-components/all.js --beautify -o dist/public/javascripts/all.js",
    "copy-assets": "mkdir -p dist/public/images && cp -R src/assets/images/* dist/public/images",
    "lint": "eslint .",
    "prettier": "prettier \"**/*.{js,md}\" --check",
    "prettier:fix": "yarn prettier --write",
    "format": "yarn prettier:fix && yarn lint",
    "test": "node_modules/.bin/jest --testPathPattern=app/bav --coverage",
    "test:browser:report": "node ./test/utils/multiReportGenerator.js",
    "test:browser": "wait-on tcp:127.0.0.1:5040 && cucumber-js test/browser/features/**/*.feature --require test/browser/support/setup.js --require test/browser/step_definitions/**/*.js -f json:./test/reports/cucumber_report.json --tags @success",
    "test:browser:ci": "npm-run-all -p -r start:ci test:browser && npm run test:browser:report",
    "test:e2e:cd:cucumber": "cucumber-js test/browser/features/**/*.feature --require test/browser/support/setup.js --require test/browser/step_definitions/**/*.js -f json:./test/reports/cucumber_report.json --tags \"@e2e or @success\"",
    "test:e2e:cd": "npm-run-all -p -r test:e2e:cd:cucumber && yarn run test:browser:report",
    "test:pii": "bash ./check-logs.sh",
    "check-translation": "node node_modules/@govuk-one-login/di-ipv-cri-common-express/scripts/checkTranslations.js '../../../../src/locales'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/govuk-one-login/ipv-cri-bav-front"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/govuk-one-login/ipv-cri-bav-front/issues"
  },
  "homepage": "https://github.com/govuk-one-login/ipv-cri-bav-front#readme",
  "packageManager": "yarn@1.22.21",
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "1.42.1",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "jest-cucumber": "^3.0.1",
    "multiple-cucumber-html-reporter": "^3.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.2.5",
    "sass": "1.71.1",
    "uglify-js": "3.17.4"
  },
  "dependencies": {
    "@aws-sdk/credential-providers": "^3.540.0",
    "@aws-sdk/lib-dynamodb": "3.363.0",
    "@govuk-one-login/di-ipv-cri-common-express": "6.0.0",
    "@govuk-one-login/one-login-analytics": "^0.0.9",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "aws4-axios": "^3.3.1",
    "axios": "^1.6.7",
    "cfenv": "1.2.4",
    "connect-dynamodb": "^2.0.6",
    "copyfiles": "2.4.1",
    "dotenv": "16.3.1",
    "express": "4.19.1",
    "express-async-errors": "3.1.1",
    "express-session": "^1.17.3",
    "govuk-frontend": "4.8.0",
    "hmpo-app": "3.0.1",
    "hmpo-components": "^6.2.0",
    "hmpo-config": "3.0.0",
    "hmpo-form-wizard": "^13.0.0",
    "hmpo-i18n": "6.0.1",
    "hmpo-logger": "7.0.1",
    "jest": "^29.5.0",
    "node-rsa": "^1.1.1",
    "nodemon": "^3.0.2",
    "nunjucks": "3.2.4",
    "nyc": "15.1.0",
    "one-login-common-headers": "^0.0.2",
    "playwright": "1.35.1",
    "reqres": "3.0.1",
    "wait-on": "7.2.0"
  },
  "resolutions": {
    "string-width": "^4.2.2"
  }
}
